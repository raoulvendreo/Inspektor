<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/bg_gradient"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="0dp"
        android:layout_marginBottom="130dp"
        android:fontFamily="@font/roboto_slab_bold"
        android:text="I N S P E C T O R"
        android:textColor="@color/colorPrimary"
        android:textSize="38sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editText_username"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:fontFamily="@font/roboto_slab"
            android:hint="@string/user_ad"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editText_password"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="@string/password_ad"
            android:inputType="textPassword"
            android:fontFamily="@font/roboto_slab">

        </com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>



    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="18dp"
        android:layout_marginStart="0dp"
        android:layout_gravity="center"
        android:id="@+id/radiogroup_domain"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="D O M A I N: "
            android:fontFamily="@font/roboto_slab"
            android:textSize="16dp">

        </TextView>

        <RadioButton
            android:id="@+id/rdio_domain_indofood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Indofood"
            android:fontFamily="@font/roboto_slab"
            >

        </RadioButton>
        <RadioButton
            android:id="@+id/rdio_domain_lonsum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lonsum"
            android:fontFamily="@font/roboto_slab"
            >

        </RadioButton>
    </RadioGroup>

    <!-- Login Button -->
    <Button
        android:id="@+id/button_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:layout_marginVertical="100dp"
        android:fontFamily="@font/roboto_slab"/>

</LinearLayout>