<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.VehicleInspectionActivity">

    <TextView
        android:id="@+id/tv_inspection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="177dp"
        android:text="VEHICLE INSPECTION"
        android:textColor="@color/GhostWhite"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_inspection"
        android:text="Running Account: "
        android:id="@id/tv_running_account">
    </TextView>

    <EditText
        android:id="@+id/et_running_account"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="55dp"
        app:layout_constraintStart_toEndOf="@+id/tv_running_account"
        app:layout_constraintTop_toBottomOf="@id/tv_inspection"
        android:inputType="number"
        android:background="@drawable/edit_text_border">
    </EditText>

    <TextView
        android:id="@+id/tv_vehicle_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_running_account"
        android:layout_marginStart="24dp"
        android:layout_marginTop="60dp"
        android:text="Vehicle Type"
        />

    <Spinner
        android:id="@+id/spinner_vehicle_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_vehicle_type"
        android:layout_marginStart="24dp" />

    <TextView
        android:id="@+id/tv_business_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="60dp"
        android:text="Business Area"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_running_account" />

    <Spinner
        android:id="@+id/spinner_business_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_business_area"
        android:layout_marginEnd="24dp"
        />

    <TextView
        android:id="@+id/tv_vehicle_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinner_vehicle_type"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:text="Vehicle Description"
        />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/textInput_vehicle_desc"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_vehicle_desc"
        android:layout_marginStart="24dp"
        android:hint="Input description here"
        android:textSize="14sp">
    </com.google.android.material.textfield.TextInputEditText>

    <TextView
        android:id="@+id/tv_dod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinner_business_area"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="40dp"
        android:text="Date of Damage"
        />

    <Button
        android:id="@+id/button_datepicker"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_dod"
        android:layout_marginEnd="24dp"
        android:text="Select date here"
        android:textSize="10sp"/>
    <!--<DatePicker
        android:id="@+id/date_picker_dod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:datePickerMode="spinner"
        android:calendarViewShown="false"

        />-->

    <TextView
        android:id="@+id/tv_criteria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textInput_vehicle_desc"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:text="Criteria"
        />

    <Spinner
        android:id="@+id/spinner_criteria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_criteria"
        android:layout_marginStart="24dp"
        />

    <TextView
        android:id="@+id/tv_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_datepicker"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="30dp"
        android:text="Location"
        />

    <Button
        android:id="@+id/button_getlocation"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_location"
        android:layout_marginEnd="24dp"
        android:text="Open map and get location here"
        />

    <TextView
        android:id="@+id/tv_open_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinner_criteria"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:text="Photo and Video"/>

    <Button
        android:id="@+id/button_open_camera"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_open_camera"
        android:layout_marginStart="24dp"
        android:text="Open Camera here"/>


</androidx.constraintlayout.widget.ConstraintLayout>